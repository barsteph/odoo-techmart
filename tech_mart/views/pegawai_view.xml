<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <!-- techmart.person tree view -->
  <record id="techmart_pegawai_view_tree" model="ir.ui.view">
    <field name="name">Daftar Employees</field>
    <field name="model">techmart.pegawai</field>
    <field name="arch" type="xml">
      <tree>
        <field name="name"/>
        <field name="alamat"/>
        <field name="tgl_lahir"/>
      </tree>
    </field>
  </record>

  <!-- techmart.person form view -->
  <record id="techmart_pegawai_view_form" model="ir.ui.view">
    <field name="name">Form Employee</field>
    <field name="model">techmart.pegawai</field>
    <field name="arch" type="xml">
      <form string="Nama">
        <sheet>
          <group name="detail" string="Employee">
            <field name="name"/>
          </group>
          <group>  
            <field name="alamat"/>
            <field name="tgl_lahir"/>
          </group>
        </sheet>
      </form>
    </field>
  </record>

</odoo>
